<h1><%= @wiki.title %></h1>

<% if @wiki.user %>
<h6 class="indent"></indent>by <%= @wiki.user.firstname %> <%= @wiki.user.lastname %></h6>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
  
  <div class="col-md-4">
    <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
    <%= link_to "Delete Wiki", @wiki, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} if policy(@wiki).destroy?%>
  </div>
</div>